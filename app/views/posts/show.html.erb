<h3>Username: <%= link_to @post.user.user_name, user_path(@post.user_id) %></h3>

<h1><%= @post.title %></h1>
<%= image_tag @post.image.url(:large), class: "img-fluid" if @post.image? %>
<p>Summary: <%= @post.summary %></p>
<p>Body: <%= @post.body %></p>

<% if user_signed_in? && current_user.id == @post.user_id %>
  <%= link_to 'Edit post', edit_admin_post_path(@post), class: "btn btn-outline-warning" %>
  <%= link_to 'Delete post', admin_post_path(@post), method: :delete, data: { confirm: 'Are you sure that you want to delete this post?'}, class: "btn btn-outline-danger" %>
<% end %>
<%= link_to 'Back', :back, class: 'btn btn-secondary form-button-back' %>